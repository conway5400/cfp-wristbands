<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col-xs-12">
            <h3 class="text-center">Wristband Information.</h3>
        </div>
    </div>
    <form id="viewProfileForm" action="/api/wristbands" method="PUT">
        <div class="form-group">
                <label for="rfidNumberInput">Wristband #</label>
                <input type="text" name="profile[firstName]" class="form-control" id="rfidNumberInput" value="<%= wristband.rfidNumber %>" placeholder="Wristband #">
        </div>                 
        <div class="form-group">
                <label for="firstNameInput">First Name</label>
                <input type="text" name="profile[firstName]" class="form-control" id="firstNameInput" value="<%= wristband.profile.firstName %>" placeholder="First Name">
        </div>            
        <div class="form-group">
                <label for="lastNameInput">Last Name</label>
                <input type="text" name="profile[lastName]" class="form-control" id="lastNameInput" value="<%= wristband.profile.lastName %>" placeholder="Last Name">
        </div>            
        <div class="form-group">
                <label for="cellNumberInput">Cell Number</label>
                <input type="text" name="profile[cellNumber]" class="form-control" id="cellNumberInput" value="<%= wristband.profile.cellNumber %>" placeholder="Cell Number">
        </div>            
        <div class="form-check">
            <label class="form-check-label">
            <input class="form-check-input" name="profile[textUpdates]" type="checkbox" value="1" <% if(wristband.profile.textUpdates == true){ %> checked <% } %>>
            Check here to receive text updates.
            </label>
        </div>
        <div class="form-group">
            <button id="editButton" class="btn btn-normal">Edit</button>
            <button id="saveButton" class="btn btn-normal">Save</button>
        </div>            
    </form>
</div>

<script src="../js/viewWristbandJS.js" type="text/javascript"></script>


<% include ../partials/footer %>